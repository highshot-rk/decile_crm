<h1 class="text-2xl font-bold mb-6"><%= @person.new_record? ? "Add New Prospect" : "Edit Prospect" %></h1>

<div class="bg-white rounded-lg shadow p-6">
  <%= form_with model: @person, local: true do |form| %>
    <%= render 'form', form: form %>
    <div class="mt-6 flex justify-end space-x-4">
      <%= form.submit @person.new_record? ? 'Create Prospect' : 'Update Prospect', class: "bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600" %>
      <%= link_to 'Cancel', people_path, class: "bg-gray-300 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-400" %>
    </div>
  <% end %>
</div>
