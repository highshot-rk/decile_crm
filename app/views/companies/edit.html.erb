<h1 class="text-2xl font-bold mb-6"><%= @company.new_record? ? "Add New Company" : "Edit Company" %></h1>

<div class="bg-white rounded shadow p-6">
  <%= form_with model: @company, local: true do |form| %>
    <div class="mb-4">
      <%= form.label :name, "Company Name", class: "block font-medium" %>
      <%= form.text_field :name, class: "w-full border rounded px-4 py-2", required: true %>
    </div>
    <div>
      <%= form.submit @company.new_record? ? 'Create' : 'Update', class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
      <%= link_to 'Cancel', companies_path, class: 'bg-gray-300 text-gray-800 px-4 py-2 rounded hover:bg-gray-400' %>
    </div>
  <% end %>
</div>
